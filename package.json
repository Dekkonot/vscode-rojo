{
    "name": "vscode-rojo",
    "displayName": "Rojo - Roblox Studio Sync",
    "description": "Build robust Roblox games using Rojo directly from VS Code to sync your scripts into Roblox Studio.",
    "version": "1.0.0",
    "publisher": "evaera",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Extension Packs"
    ],
    "icon": "./assets/extension-icon.png",
    "activationEvents": [
        "workspaceContains:rojo.json",
        "onCommand:rojo.init",
        "onCommand:rojo.start"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "rojo.init",
                "title": "Initialize",
                "category": "Rojo"
            },
            {
                "command": "rojo.start",
                "title": "Start server",
                "category": "Rojo"
            },
            {
                "command": "rojo.stop",
                "title": "Stop server",
                "category": "Rojo"
            }
        ],
        "jsonValidation": [
          {
            "fileMatch": "rojo.json",
            "url": "./schemas/rojo.schema.json"
          }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "tslint-config-standard": "^7.0.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "axios": "^0.18.0"
    }
}
